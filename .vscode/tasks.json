{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (static via GVM) â†’ pkg/ai-proxy",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "source $HOME/.gvm/scripts/gvm && gvm use go1.24.6 --default >/dev/null && scripts/build-release.sh"
      ],
      "options": { "env": { "LANG": "C.UTF-8", "LC_ALL": "C.UTF-8" } },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": "$go"
    },

    {
        "label": "Start Qdrant",
        "type": "shell",
        "command": "distrobox-host-exec podman start qdrant",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "reveal": "silent",
            "panel": "dedicated"
        },
        "runOptions": {
            "runOn": "folderOpen"
        }
    }
  ]
}
